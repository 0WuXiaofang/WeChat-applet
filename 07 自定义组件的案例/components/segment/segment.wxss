.segment-group{
  width: 100%;
}

.segment-header{
  width: 100%;
  height: 50rpx;
  border: 1px solid #e4e4e4;
  display: flex;
}

.segment-item{
  flex:1;
  border-right: 1px solid #e4e4e4;
  font-size: 14px;
  /* 文字水平居中 */
  display: flex;
  justify-content: center;
  align-content: center;
}

.segment-item:last-of-type{
  /* 最后一个边框的线设置为无 */
  border: none;
}

/* 设置边框被选中的状态，为绿色 */
.segment-header .active{
  background: purple;
  color: #ffff;
}

.segment-body{
  width: 100%;
}