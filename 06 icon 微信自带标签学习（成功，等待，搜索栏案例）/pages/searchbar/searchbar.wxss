/* pages/searchbar/searchbar.wxss */
.top-group{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;/* 边框的内边距都包含在 padding里 */
  background: #00B51d;
}

/* 搜索框的样式 */
.search-group{
  width: 100%;
  height: 70rpx;
  background: white;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;

  box-sizing: border-box;

  border-radius: 10rpx;
}

.search-group .search-icon{
   flex-basis: 40rpx;
}

.search-group .clear-icon{
   flex-basis: 40rpx;
}

.search-group .search-input{
  flex: 1;
  padding:  0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.placeholder-input{
  font-size: 28rpx;
}