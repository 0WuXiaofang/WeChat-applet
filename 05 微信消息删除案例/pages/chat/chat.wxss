/* pages/chat/chat.wxss */
.listview{
  width: 100%;
  height: 1000px;
  background: #ccc;
}

.listview .itemview{
  width: 100%;
  height: 200rpx;
  background: pink;
  /* 主轴布局 */
  display: flex;
  justify-content: flex-start;
}

.itemview .movablearea{
  height: 100%;
  background: burlywood;
}

.movablearea .movableview{
  height: 100%;
  background: skyblue;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.itemview .deleteview{
  width: 200rpx;
  height: 100%;
  /* 字体位置 居中布局，flex也可用 */
  line-height: 200rpx;
  justify-content: center;
  text-align: center;
  background: red;
} 